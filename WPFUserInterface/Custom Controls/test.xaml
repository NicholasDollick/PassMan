<UserControl x:Class="WPFUserInterface.Custom_Controls.test"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFUserInterface.Custom_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Wheat">
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Border Width="4" 
                    Background="{StaticResource AccentColor}"
                        CornerRadius="2"
                    Margin="2 3 5 0"/>
                <TextBlock Text="IMAGE" Margin="0 10 10 0"/>
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="ENTRY NAME" FontWeight="Bold"/>
                    <TextBlock Text="username"/>
                </StackPanel>
            </StackPanel>
            <Border Height="2" 
                    Background="{StaticResource WidgetColorE}"
                    Margin="0 3 0 0"/>
        </StackPanel>
    </Grid>
</UserControl>
